<%- include ('../../shared/header.ejs',{estilos:['/css/estilos-pagina.css','https://fonts.googleapis.com/css2?family=Roboto&display=swap'],scripts:[]}) %>
<div class="full-size flex-full-center background-image-1">
    <div class="card background-pattern-lines background-dark">
        <h1 class="text-center">Ingreso</h1>
        <form action="submit">
            <div class="form-group">
                <label for="correo">Correo:</label>
                <input id="correo"
                       type="email"
                       name="correo"
                       placeholder="Ej: correo@correo.com"
                       title="Ingresar correo electronico"
                       class="form-control">
                <small id="nombreIDHelp"
                       class="text-muted">
                    Ingrese su correo electronico con el que esta registrado
                </small>
            </div>

            <div class="form-group">
                <label for="contrasena">Contraseña:</label>
                <input id="contrasena"
                       type="password"
                       name="contrasena"
                       title="Ingresar su contrasena"
                       class="form-control">
                <small id="nombreIDHelp"
                       class="text-muted">
                    Ingrese su contraseña
                </small>
            </div>
            <button type="submit"
                    class="btn btn-success"
            >
                Ingresar
            </button>
        </form>
    </div>
</div>
<%- include ('../../shared/end-document.ejs') %>